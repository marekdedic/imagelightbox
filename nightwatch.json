{
    "src_folders" : [ "./test/src" ],
    "output_folder" : "./test/reports",

    "selenium" : {
        "start_process" : true,
        "log_path" : false,
        "port" : 4444,
        "cli_args" : {}
    },

    "test_settings" : {
        "default" : {
            "launch_url" : "http://localhost",
            "selenium_port"  : 4444,
            "selenium_host"  : "localhost",
            "silent": true,
            "desiredCapabilities": {
                "browserName" : "chrome",
                "javascriptEnabled" : true,
                "acceptSslCerts" : true,
                "chromeOptions" : {
                    "args" : [ "headless" ]
                }
            }
        }
    }
}
