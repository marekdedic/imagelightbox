{
    "src_folders" : [ "./test/src" ],
    "output_folder" : "./test/reports",

    "selenium" : {
        "start_process" : true,
        "server_path" : "./test/resources/selenium-server-standalone-3.0.1.jar",
        "log_path" : false,
        "port" : 4444,
        "cli_args" : {
            "webdriver.gecko.driver" : "./test/resources/geckodriver"
        }
    },

    "test_settings" : {
        "default" : {
            "launch_url" : "http://localhost",
            "selenium_port"  : 4444,
            "selenium_host"  : "localhost",
            "silent": true,
            "screenshots" : {
                "enabled" : false,
                "path" : ""
            },
            "desiredCapabilities": {
                "browserName": "firefox",
                "marionette": true
            }
        }
    }
}
